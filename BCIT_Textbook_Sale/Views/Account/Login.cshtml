@using BCIT_Textbook_Sale.Models
@model LoginViewModel
@{
    ViewBag.Title = "Log in";
}

<div class="form-group" style="background-color:white; opacity:0.95; padding:50px; padding-top:20px; text-align:left; width:750px; margin:0 auto;">
    <h2>@ViewBag.Title</h2>
    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <hr/>
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <table>
                <tr>
                    <td colspan="2" style="padding:15px 10px">
                        @Html.LabelFor(m => m.Email)
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td colspan="2" style="padding:15px 10px">
                        @Html.LabelFor(m => m.Password)
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" class="btn btn-primary btn-large index-button" value="Log in" style="width:100%; margin-left:9px; margin-top:20px" />
                    </td>
                    <td>
                        <input type="button" class="btn btn-primary btn-large index-button" value="Register" style="width:88%; margin-top:20px" onclick="location.href='@Url.Action("Register", "Account")'" />
                    </td>
                </tr>
        </table>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}