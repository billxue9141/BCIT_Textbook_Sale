@model BCIT_Textbook_Sale.Models.ChangeNameViewModel
@{
    ViewBag.Title = "Change Name";
}
<div style="background-color:white; opacity:0.95; padding:50px;padding-top:20px; text-align:left ;min-height:600px">
    <h2>@ViewBag.Title</h2>

    @using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <hr />
        @Html.ValidationSummary("", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(m => m.NewName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.NewName, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change name" class="btn btn-default" />
            </div>
        </div>
    }
    </div>
    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
