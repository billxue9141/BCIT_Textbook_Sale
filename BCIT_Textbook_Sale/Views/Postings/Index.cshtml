@model IEnumerable<BCIT_Textbook_Sale.Models.Posting>

@{
    ViewBag.Title = "Index";
}

<h2>Current Posting</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="postingTable">
    @foreach (var item in Model)
    {
        <tr>
            <td rowspan="3" style="min-width:200px; min-height:200px; width:200px; height:200px">@Html.DisplayFor(modelItem => item.Program.programName)</td>
            <td colspan="3">
                @Html.ActionLink(
               "[" + @Html.DisplayFor(modelItem => item.Program.programName).ToString() + "]" +
                           @Html.DisplayFor(modelItem => item.title).ToString(),
                           "Details", new { id = item.Id })
            </td>
        </tr>
        <tr>
            <td style="width:20%">@Html.DisplayFor(modelItem => item.username)</td>
            <td style="width:20%">@Html.DisplayFor(modelItem => item.postdate)</td>
            <td>
                @if (Request.IsAuthenticated)
                {
                    @Html.AntiForgeryToken()
                    @Html.DisplayName(" | ")
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.DisplayName(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                }
            </td>
        </tr>
        <tr>
            <td colspan="3">@Html.DisplayFor(modelItem => item.description)</td>
        </tr>
    }
</table>
