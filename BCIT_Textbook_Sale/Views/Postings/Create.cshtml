@model BCIT_Textbook_Sale.Models.Posting

@{
    ViewBag.Title = "Create";
}

<div class="form-group" style="background-color:white; opacity:0.95; padding:50px;padding-top:20px; text-align:left; width:750px; margin: 0 auto; ">
    <h2>Create New Post</h2>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <hr />
        <table>
            <tbody>
                <tr>
                    <td width="50%" style="padding:15px 10px">
                        @Html.Label("Post Title", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.title, new { htmlAttributes = new { @class = "form-control", @style = "border: none; border-bottom: 2px solid #003E6B;" } })
                        @Html.ValidationMessageFor(model => model.title, "", new { @class = "text-danger" })
                    </td>
                    <td width="50%" style="padding:15px 10px">
                        @Html.Label("Image Link", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.imglink, new { htmlAttributes = new { @class = "form-control", @style = "border: none; border-bottom: 2px solid #003E6B;" } })
                        @Html.ValidationMessageFor(model => model.imglink, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td width="50%" style="padding:15px 10px">
                        @Html.Label("Program ID", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.programID, ViewBag.programID as List<SelectListItem>, new { @class = "form-control", @style = "border: none; border-bottom: 2px solid #003E6B;" })
                        @Html.ValidationMessageFor(model => model.programID, "", new { @class = "text-danger" })
                    </td>
                    <td width="50%" style="padding:15px 10px">
                        @Html.Label("Post Type", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownListFor(m => m.postingType, ViewBag.postingType as List<SelectListItem>, new { @class = "form-control", @style = "border: none; border-bottom: 2px solid #003E6B;" })
                        @Html.ValidationMessageFor(model => model.postingType, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td width="50%" style="padding:15px 10px">
                        @Html.Label("Price", htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.price, new { htmlAttributes = new { @class = "form-control", @style = "border: none; border-bottom: 2px solid #003E6B;" } })
                        @Html.ValidationMessageFor(model => model.price, "", new { @class = "text-danger" })
                    </td>
                    <td rowspan="2" width="50%" style="padding:15px 10px">
                        @Html.Label("Description", htmlAttributes: new { @class = "control-label" })
                        @Html.TextAreaFor(model => model.description, new { @class = "form-control", @style = "border: none; border: 1px solid #003E6B; height:150px" })
                        @Html.ValidationMessageFor(model => model.description, "", new { @class = "text-danger" })
                    </td>
                </tr>
                <tr>
                    <td width="50%" style="padding:15px 10px">
                        <input type="submit" value="Create" class="btn btn-primary index-button" style="width:100%; margin-left:0px" />
                    </td>
                </tr>
            </tbody>
        </table>
    }


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
